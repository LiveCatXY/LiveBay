---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";

interface Props {
  data: CollectionEntry<"xyy">["data"];
}

const {
  data: { title, subTitle, tags, level, pubDate, updatedDate, heroImage, paradigm },
} = Astro.props;
---

<article>
  <div class="hero-image">
    {heroImage && <img width={1020} height={510} src={heroImage} alt="Hero Image" />}
  </div>
  <div class="prose">
    <div class="title">
      <h2>{title}</h2>
      <h4>{subTitle}</h4>
      <div class="date">
        <FormattedDate date={pubDate} />
        {
          updatedDate && (
            <>
              <span>↻更新于</span>
              <FormattedDate date={updatedDate} />
            </>
          )
        }
      </div>
      <div class="mb-1">
        {"⭐️".repeat(level)}
        {tags.length > 0 && "｜🏷 " + tags.join(", ")}
        {paradigm && `｜💛范式：${paradigm}`}
      </div>
      <hr />
    </div>
    <div class="content">
      <slot />
    </div>
  </div>
</article>

<style>
  article {
      overflow: auto;
      border: 1px solid rgb(var(--gray-light));
  }
  .hero-image {
    width: 100%;
    img {
      display: block;
      margin: 0 auto;
      border-radius: 12px;
      box-shadow: var(--box-shadow);
    }
  }
  .prose {
    width: 100%;
    height: 100%;
    color: rgb(var(--gray-dark));
  }
  .title {
    padding-bottom: 1em;
    text-align: center;
    line-height: 1;
  }
  .date {
    margin-bottom: 0.5em;
    color: rgb(var(--gray));
  }
</style>
