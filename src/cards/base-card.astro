---
interface Props {
  width: string;
  height: string;
  class: string;
}

const { width = "128px", height = "128px", class: cls } = Astro.props;
---

<div class="card" class:list={cls}>
  <slot />
</div>
<style define:vars={{ width, height }}>
  .card {
    display: flex;
    align-items: center;
    justify-content: center;
    border: double 4px;
    width: var(--width);
    height: var(--height);
    overflow: hidden;
  }
</style>
