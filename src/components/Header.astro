---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<header>
  <nav>
    <div class="title">
      <a href="/">{SITE_TITLE}</a>
      <a href="/" class="text-xs w-[7.4rem]">{SITE_DESCRIPTION}</a>
    </div>
    <div class="tabs">
      <HeaderLink href="/life">🌳人生树</HeaderLink>
      <HeaderLink href="/lab">🦄公社</HeaderLink>
      <HeaderLink href="/xyy">🧚逍遥游</HeaderLink>
    </div>
    <div class="social-links">
      <a href="https://github.com/andyluss" target="_blank">
        <span class="sr-only">转到我的 GitHub</span>
        <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
          ><path
            fill="currentColor"
            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
          ></path></svg
        >
      </a>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 0.2em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  .title {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 1.2em;
    margin: 0;
    min-width: 140px;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    color: var(--black);
  }
  nav .tabs {
    width: 50%;
    text-align: center;
  }
  nav .tabs a {
    border-bottom: 2px solid transparent;
    text-decoration: none;
  }
  nav .tabs a.active {
    border-bottom-color: var(--accent);
  }
  .social-links {
    display: flex;
    justify-content: space-around;
    min-width: 140px;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
